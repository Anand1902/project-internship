struct search
{
  int d[10];
};
struct search b;

void search()
{
  int c,i,j;
  printf("enter code\t");
  scanf("%d",b.d);
  for(i=0;i<n;i++)
  {
    if(b.d==a[i].code)
    {
      printf("%s",a[i].name);
      printf("%s",a[i].brand);
      printf("%s",a[i].size);
    }
  }
  printf("\npress 0 to exit:\t");
    scanf("%d",&c);
    if(c==0)
    {
      mainmenu();
    }
}
void calculate()
{
